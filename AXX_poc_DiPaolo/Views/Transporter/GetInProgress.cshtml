@model List<AXX_poc_DiPaolo.Models.Request>

@Html.Partial("_NavbarTransporter")

@{
    ViewData["Title"] = "Requests In Progress";
}

<h2>Requests In Progress</h2>

@if (Model != null && Model.Any())
{
    <table class="table-bordered">
        <thead>
            <tr>
                <th>Tyre Dealer</th>
                <th>Pickup Date</th>
                <th>Location</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.TyreDealerCompany</td>
                    <td>@r.PickupDate?.ToShortDateString()</td>
                    <td>@r.Location</td>
                    <td>@r.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You have no assigned requests in progress.</p>
}
